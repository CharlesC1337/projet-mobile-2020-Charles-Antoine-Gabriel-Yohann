<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cgmatane.qc.ca.findspot">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FindSpot"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="cgmatane.qc.ca.findspot.VueLocalisation"/>
        <activity android:name="cgmatane.qc.ca.findspot.VueInscription" />
        <activity android:name="cgmatane.qc.ca.findspot.VueConnexion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cgmatane.qc.ca.findspot.VueObjectif" />
        <activity android:name="cgmatane.qc.ca.findspot.VueTableauDesScores" />
        <activity android:name="cgmatane.qc.ca.findspot.VueAccueil"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>